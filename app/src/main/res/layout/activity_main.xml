<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#bfb"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="70dp">
        <RadioButton
            android:id="@+id/main_rg_rb1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/drawableselect"
            android:button="@null"
            android:text="首页"
            android:textColor="@drawable/colorselect"
            />
        <RadioButton
            android:id="@+id/main_rg_rb2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/drawableselect"
            android:button="@null"
            android:text="消息"
            android:textColor="@drawable/colorselect"
            />
        <RadioButton
            android:id="@+id/main_rg_rb3"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/drawableselect"
            android:button="@null"
            android:text="联系人"
            android:textColor="@drawable/colorselect"
            />
        <RadioButton
            android:id="@+id/main_rg_rb4"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/drawableselect"
            android:button="@null"
            android:text="我的"
            android:textColor="@drawable/colorselect"
            />
    </RadioGroup>
</LinearLayout>